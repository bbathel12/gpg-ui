extends layout

block content
    div.row
        h4 Add a Recipient's Public Key
        form.col-sm-8.offset-2(action='/add-key',method='post')
            div.form-group
                label(for='key') Key
                textarea.form-control(name='key')
            hr
            div.btn-group
                button.btn.btn-primary(name='add') Add Key

