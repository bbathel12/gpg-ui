extends layout

block content
    div.row
        form.col-sm-8.offset-2(action='/' method='post')
            div.form-group
                label(for="message") Message
                    span.text-danger.text-small
                        small &nbsp; *Either encyrpted or decrypted
                    button.btn.btn-primary.copy(data-target="#message")
                        span.fa-regular.fa-copy

                textarea#message.form-control(name='message',rows="15") #{message}
                textarea#message_copy.hidden
            div.form-group
                label(for="passphrase") Passphrase
                input.form-control(name='passphrase' type='password')
            div.form-group
                label(for="recipient") Recipient
                    span.text-danger.text-small
                        small &nbsp; *Required for encrpyting
                select.form-select(name='recipient' type='text')
                    option
                    each rec in recipients
                        option(value=rec)= rec


            hr
            div.btn-group
                button.btn.btn-primary(name='encrypt' value='encypt') Encrypt
                button.btn.btn-secondary(name='decrypt' value='decrypt') Decrypt
