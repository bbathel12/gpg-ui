
doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css')
    script(src="https://code.jquery.com/jquery-3.6.1.min.js",integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://kit.fontawesome.com/e8388f697e.js", crossorigin='anonymous')
  body.bg-dark.text-light
    div.container
      a.navbar-brand(href="#") GPG UI
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        button.navbar-toggler(type='button',data-toggle='collapse', data-target='#navbarSupportedContent',aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href="/") Encrypt/Decrypt
            li.nav-item
              a.nav-link(href="/add-key") Add Key

      div.errors
        - if (typeof(errors) !== 'undefined'){
          each error in errors
            div.alert.alert-danger= error
        - }
      div.alerts
        - if (typeof(alerts) !== 'undefined'){
          each alert in alerts
            div.alert.alert-success= alert
        - }
      block content

    script(src="/javascripts/copy-button.js")
